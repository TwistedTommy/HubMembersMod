<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns:smf="http://www.simplemachines.org/" xmlns="http://www.simplemachines.org/xml/package-info">
    <id>TwistedTommy:HubMembersMod</id>
    <name>Hub Members Mod</name>
    <version>0.1</version>
    <type>modification</type>
    <install for="2.0 - 2.0.99">
        <readme parsebbc="true">readme.txt</readme>
        <modification>install.xml</modification>
        <code>install.php</code>
        <require-file name="files/HubMembersMod.php" destination="$boarddir/Sources" />
    </install>
    <uninstall for="2.0 - 2.0.99">
        <modification reverse="true">install.xml</modification>
        <code>uninstall.php</code>
        <remove-file name="$sourcedir/HubMembersMod.php" />
    </uninstall>
</package-info>